{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Udav",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.Udav",
				"match": "\\b(друк|ввід|якщо|інакше|інакше_якщо|правда|брехня|або|не|і|для_будь_якого|поки|функція|припинити|продовжити|повернути|пропуск|клас|як|з|отримати|заочно|жодний|крім|в|підняти|остаточно|є|лямбда|спробувати|не_локально|утвержувати|видалити|глобально|асинхронно|здобути|ціле_число|дробове_число|рядок|границях|своє)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.Udav",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.Udav",
					"match": "\\\\."
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.assignment.Udav",
					"match": "\\b(\\+=|-=|\\*=|\\+\\+|--|==|!=|<|>|<=|>=)\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.hash.Udav",
					"match": "#.*$"
				}
			]
		}
	},
	"scopeName": "source.udav"
}